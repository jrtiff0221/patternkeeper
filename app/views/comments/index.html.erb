<% if @comments.blank? %>
<p>There are not any comments currently in the system.</p>
<% else %>
<p>These are the current comments in our system</p>
<% end %>


<ul id = "comments">
   <% Comment.all.each do |c| %>
   <li><%= link_to c.title, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>
