<h3>New Comment:</h3>

<%= form_for Comment.new do |f| %>
    <%= f.hidden_field :pattern_id %>

    <%= f.label :Title %>
    <br>
    <%= f.text_area :title %>
    <br>
    <%= f.label :Name %>
    <br>
    <%= f.text_area :name %>
    <br>
    <%= f.label :Message %>
    <br>
    <%= f.text_area :message %>

    <%= f.submit %>
<% end %>