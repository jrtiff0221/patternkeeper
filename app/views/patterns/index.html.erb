<% if @patternss.blank? %>
<p>There are not any patterns currently in the system.</p>
<% else %>
<p>These are the current patternss in our system</p>

<ul id = "patterns">
   <% @patterns.each do |c| %>
   <li><%= link_to c.title, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>

<% end %>
<div class="container" role="main">
<h1>All Patterns</h1>
<table class="table">
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>Title</strong></td>
            <tr>
            <td><strong>Author</strong></td>
            <tr>
            <td><strong>category</strong></td>
            <tr>
            <td><strong>Difficulty</strong></td>
            <tr>
            <td><strong>Description</strong></td>
            <tr>
            <td><strong>Name</strong></td>
            <tr>
            <td><strong>Website</strong></td>
        </tr>
         <% @patterns.each do |pattern| %>
         <tr>
            <td><%= pattern.title %></td>
            <tr>
            <td><%= pattern.author %></td>
            <tr>
            <td><%= pattern.category %></td>
            <tr>
            <td><%= pattern.difficulty %></td>
            <tr>
            <td><%= pattern.description %></td>
            <tr>
            <td><%= pattern.name %></td>
            <tr>
            <td><%= pattern.website %></td>
     
        <% end %>
   
        </tr> 

      </tbody> 
</table>
</div> 