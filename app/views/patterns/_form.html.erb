
<h1>Create a Pattern</h1>

    <% if @pattern.errors.any? %>
    <% @pattern.errors.full_messages.each do |error_message| %>
    <li style="color: red"> <%= error_message %></li>
        <% end %>
    <%end%>


<%= form_for (@pattern) do |f| %>
<p><label for = "pattern_title">Title</label>:

<%= text_field 'patterns', 'title' %></p>
<p><label for = "pattern_author">Author</label>:

<%= text_field 'patterns', 'author' %></p>
<p><label for = "pattern_category">Category</label>:

<%= f.select(:category,["Crocheting", "Knitting", "Macrame", "Sewing"]) %></p>
<p><label for = "pattern_difficulty">Difficulty</label>:

<%= f.select(:difficulty,["1 Easy", "2 Intermediate", "3 Advanced"]) %></p>
<p><label for = "pattern_description">Description</label><br/>

<%= text_area 'books', 'description' %></p>
<p><label for = "pattern_name">Name</label>:

<%= text_field 'patterns', 'name' %></p>
<p><label for = "pattern_website">Website</label>:

<%= text_field 'patterns', 'website' %></p>

<%= submit_tag "Create" %>

<% end -%>