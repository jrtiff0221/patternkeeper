

<h1><%= @pattern.title %></h1>
<br>

<h2><%= @pattern.author %></h2>
<br>
<h3><%= @pattern.published_date %></h3>
<br>
<h3><%= @pattern.category%></h3>
<br>
<h3><%= @pattern.difficulty %></h3>
<br>
<p><%= @pattern.description %></p>
<br>
<h2><%= @pattern.name %></h2>
<br>
<h2><%= @pattern.website %></h2>



<% @post.users.distinct.each do |user| %>
    <%= link_to user.name, user_path(user) %>
    <%= user.pattern_comments(@pattern).each do |comment| %>
        <p><%= user.name %> says: <%= comment.message %>
    <% end %>
<% end %>

<h3>New Comment:</h3>

<%= form_for @pattern.comments.build do |f| %>
    <%= f.hidden_field :post_id %>

    <%= f.collection_select :user_id, User.all, :id, :name %>

    <%= f.fields_for :user, User.new do |user_fields| %>
        <%= user_fields.label :name %>
        <%= user_fields.text_field :name %>
    <% end %>

    <%= f.text_area :message %>

    <%= f.submit %>
<% end %>
