<h2><%= @pattern.title %></h2>
<h3><%= @pattern.author %></h3>
<h3><%= @pattern.published_date %></h3>
<h3><%= @pattern.category%></h3>
<h3><%= @pattern.difficulty %></h3>
<p><%= @pattern.description %></p>
<h3><%= @pattern.name %></h3>
<h3><%= @pattern.website %></h3>

<h3>New Comment:</h3>

<%= form_for @pattern.comments.build do |f| %>
    <%= f.hidden_field :pattern_id %>

    <%= f.collection_select :user_id, User.all, :id, :name %>

    <%= f.fields_for :user, User.new do |user_fields| %>
        <%= user_fields.label :name %>
        <%= user_fields.text_field :name %>
    <% end %>

    <%= f.text_area :message %>

    <%= f.submit %>
<% end %>
